<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pokedex.App">
    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="GoogleFont">
                <On Platform="Android" Value="ReggaeOne-Regular.ttf#Regular" />
                <On Platform="iOS" Value="ReggaeOne-Regular.ttf#Regular" />
            </OnPlatform>
            <OnPlatform x:TypeArguments="x:String" x:Key="Pokemon">
                <On Platform="Android" Value="pokemon.ttf#Regular" />
                <On Platform="iOS" Value="ReggaeOne-Regular.ttf#Regular" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>